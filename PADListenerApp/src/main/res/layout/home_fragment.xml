<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="start"
	tools:context=".ui.activity.HomeActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="12dp"
			android:layout_marginTop="12dp"
			app:cardBackgroundColor="@color/card_background">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:minHeight="64dp"
					android:text="@string/home_capture_content"
					android:textSize="@dimen/text_size_xlarge"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="36dp"
					android:layout_gravity="bottom"
					android:layout_marginBottom="18dp"
					android:gravity="right"
					android:orientation="horizontal">

					<Button
						android:id="@+id/home_capture_manual_button"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginRight="18dp"
						android:background="@drawable/button_secondary"
						android:minWidth="96dp"
						android:text="@string/home_capture_button_manual"
						android:textAllCaps="true"
						android:textColor="@color/theme_primary"
						android:textSize="@dimen/text_size_medium"
						android:textStyle="bold"
						/>

					<Button
						android:id="@+id/home_capture_auto_button"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginRight="18dp"
						android:background="@drawable/button_primary"
						android:minWidth="96dp"
						android:text="@string/home_capture_button_auto"
						android:textAllCaps="true"
						android:textColor="#fff"
						android:textSize="@dimen/text_size_medium"
						android:textStyle="bold"/>
				</LinearLayout>
			</LinearLayout>
		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="12dp"
			android:layout_marginTop="12dp"
			app:cardBackgroundColor="@color/card_background">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:minHeight="64dp"
					android:text="@string/home_sync_content"
					android:textSize="@dimen/text_size_xlarge"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="36dp"
					android:layout_gravity="bottom"
					android:layout_marginBottom="18dp"
					android:gravity="right"
					android:orientation="horizontal">

					<Button
						android:id="@+id/home_sync_manual_button"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginRight="18dp"
						android:background="@drawable/button_secondary"
						android:minWidth="96dp"
						android:text="@string/home_sync_button_manual"
						android:textAllCaps="true"
						android:textColor="@color/theme_primary"
						android:textSize="@dimen/text_size_medium"
						android:textStyle="bold"
						/>

					<Button
						android:id="@+id/home_sync_auto_button"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginRight="18dp"
						android:background="@drawable/button_primary"
						android:minWidth="96dp"
						android:text="@string/home_sync_button_auto"
						android:textAllCaps="true"
						android:textColor="#fff"
						android:textSize="@dimen/text_size_medium"
						android:textStyle="bold"/>
				</LinearLayout>
			</LinearLayout>
		</android.support.v7.widget.CardView>
	</LinearLayout>
</ScrollView>
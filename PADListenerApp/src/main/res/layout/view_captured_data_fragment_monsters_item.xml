<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="112dp"
	android:layout_height="112dp">

	<ImageView
		android:id="@+id/view_captured_monsters_item_image"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="8dp"
		android:src="@drawable/no_monster_image"/>

	<TextView
		android:id="@+id/view_captured_monsters_item_awakenings"
		android:layout_width="wrap_content"
		android:layout_height="24dp"
		android:layout_alignLeft="@+id/view_captured_monsters_item_image"
		android:layout_alignTop="@+id/view_captured_monsters_item_image"
		android:background="@drawable/layer_monster_awakenings"
		android:gravity="center"
		android:minWidth="24dp"
		android:textColor="@color/body_text_1_inverse"/>

	<TextView
		android:id="@+id/view_captured_monsters_item_level"
		android:layout_width="wrap_content"
		android:layout_height="24dp"
		android:layout_alignRight="@+id/view_captured_monsters_item_image"
		android:layout_alignTop="@+id/view_captured_monsters_item_image"
		android:background="@drawable/layer_monster_level"
		android:gravity="center"
		android:minWidth="24dp"
		android:textColor="@color/body_text_1_inverse"/>

	<TextView
		android:id="@+id/view_captured_monsters_item_skill_level"
		android:layout_width="wrap_content"
		android:layout_height="24dp"
		android:layout_alignBottom="@+id/view_captured_monsters_item_image"
		android:layout_alignRight="@+id/view_captured_monsters_item_image"
		android:background="@drawable/layer_monster_skill_level"
		android:gravity="center"
		android:minWidth="24dp"
		android:textColor="@color/body_text_1_inverse"/>

	<TextView
		android:id="@+id/view_captured_monsters_item_pluses"
		android:layout_width="wrap_content"
		android:layout_height="24dp"
		android:layout_alignBottom="@+id/view_captured_monsters_item_image"
		android:layout_alignLeft="@+id/view_captured_monsters_item_image"
		android:background="@drawable/layer_monster_pluses"
		android:gravity="center"
		android:minWidth="24dp"
		android:textColor="@color/body_text_1_inverse"/>

</RelativeLayout>
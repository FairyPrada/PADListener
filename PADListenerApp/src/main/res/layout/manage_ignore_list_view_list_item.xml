<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:orientation="horizontal">

	<ImageView
		android:id="@+id/manage_ignore_list_view_list_item_image"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:src="@drawable/no_monster_image"/>

	<Button
		android:id="@+id/manage_ignore_list_view_list_item_remove_button"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_gravity="center_vertical"
		android:text="@string/manage_ignore_list_view_list_remove"
		/>

	<TextView
		android:id="@+id/manage_ignore_list_view_list_item_name"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:text="@string/manage_ignore_list_view_list_name"
		android:textSize="20sp"/>

</LinearLayout>
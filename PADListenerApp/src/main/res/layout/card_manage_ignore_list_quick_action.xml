<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/manage_ignore_list_quick_action_item_image_1"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_weight="1"
			android:src="@drawable/no_monster_image"/>

		<ImageView
			android:id="@+id/manage_ignore_list_quick_action_item_image_2"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_weight="1"
			android:src="@drawable/no_monster_image"/>

		<ImageView
			android:id="@+id/manage_ignore_list_quick_action_item_image_3"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_weight="1"
			android:src="@drawable/no_monster_image"/>

		<ImageView
			android:id="@+id/manage_ignore_list_quick_action_item_image_4"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_weight="1"
			android:src="@drawable/no_monster_image"/>

		<ImageView
			android:id="@+id/manage_ignore_list_quick_action_item_image_5"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_weight="1"
			android:src="@drawable/no_monster_image"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button
			android:id="@+id/manage_ignore_list_quick_action_item_remove_button"
			android:layout_width="wrap_content"
			android:layout_height="36dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_weight="1"
			android:text="@string/manage_ignore_list_quick_action_remove"
			android:background="@drawable/button_secondary"
			android:textColor="@color/theme_primary"
			android:textSize="@dimen/text_size_medium"
			android:textStyle="bold"
			/>

		<Button
			android:id="@+id/manage_ignore_list_quick_action_item_add_button"
			android:layout_width="wrap_content"
			android:layout_height="36dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_weight="1"
			android:text="@string/manage_ignore_list_quick_action_add"
		    android:background="@drawable/button_primary"
		    android:textColor="#fff"
		    android:textSize="@dimen/text_size_medium"
		    android:textStyle="bold"
			/>
	</LinearLayout>


</LinearLayout>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	tools:context=".ui.activity.FilterFriendsChooseLeadersActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/filter_friends_choose_leaders_item_parent_image"
			android:layout_width="75dp"
			android:layout_height="75dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="40dp"
			android:layout_marginRight="5dp"
			android:src="@drawable/no_monster_image"/>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:orientation="vertical">

			<TextView
				android:id="@+id/filter_friends_choose_leaders_item_parent_name"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_margin="5dp"
				android:ellipsize="end"
				android:gravity="center_vertical"
				android:lines="1"
				android:text="@string/filter_friends_choose_leaders_item_parent_name_group"
				android:textColor="@color/body_text_1"
				android:textSize="16sp"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<Button
					android:id="@+id/filter_friends_choose_leaders_item_parent_select_all_button"
					android:layout_width="wrap_content"
					android:layout_height="32dp"
					android:layout_gravity="center_vertical"
					android:layout_margin="5dp"
					android:background="@drawable/button_secondary"
					android:focusable="false"
					android:focusableInTouchMode="false"
					android:minWidth="72dp"
					android:text="@string/filter_friends_choose_leaders_item_parent_select_all"
					android:textAllCaps="true"
					android:textColor="@color/theme_primary"
					android:textSize="@dimen/text_size_medium"/>

				<Button
					android:id="@+id/filter_friends_choose_leaders_item_parent_select_none_button"
					android:layout_width="wrap_content"
					android:layout_height="32dp"
					android:layout_gravity="center_vertical"
					android:layout_margin="5dp"
					android:background="@drawable/button_secondary"
					android:focusable="false"
					android:focusableInTouchMode="false"
					android:minWidth="72dp"
					android:text="@string/filter_friends_choose_leaders_item_parent_select_none"
					android:textAllCaps="true"
					android:textColor="@color/theme_primary"
					android:textSize="@dimen/text_size_medium"/>
			</LinearLayout>
		</LinearLayout>

	</LinearLayout>

	<TableRow
		android:id="@+id/filter_friends_choose_leaders_item_parent_table_header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="4dp"
		android:gravity="center">

		<TextView
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:text="\?"
			android:textColor="@color/body_text_1"
			android:textSize="12sp"
			android:textStyle="bold"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:text="@string/filter_friends_choose_leaders_item_child_label_level"
			android:textColor="@color/body_text_1"
			android:textSize="12sp"
			android:textStyle="bold"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:text="@string/filter_friends_choose_leaders_item_child_label_skill"
			android:textColor="@color/body_text_1"
			android:textSize="12sp"
			android:textStyle="bold"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:text="@string/filter_friends_choose_leaders_item_child_label_awakenings"
			android:textColor="@color/body_text_1"
			android:textSize="12sp"
			android:textStyle="bold"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:text="@string/filter_friends_choose_leaders_item_child_label_plusHp"
			android:textColor="@color/body_text_1"
			android:textSize="12sp"
			android:textStyle="bold"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:text="@string/filter_friends_choose_leaders_item_child_label_plusAtk"
			android:textColor="@color/body_text_1"
			android:textSize="12sp"
			android:textStyle="bold"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:text="@string/filter_friends_choose_leaders_item_child_label_plusRcv"
			android:textColor="@color/body_text_1"
			android:textSize="12sp"
			android:textStyle="bold"/>
	</TableRow>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="80dp"
	android:orientation="horizontal">

	<CheckBox
		android:id="@+id/card_choose_sync_material_checkbox"
		android:layout_width="wrap_content"
		android:layout_height="80dp"/>

	<ImageView
		android:id="@+id/card_monster_image"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:src="@drawable/no_monster_image"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<TextView
			android:id="@+id/card_choose_sync_materials_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="10dp"
			android:ellipsize="end"
			android:gravity="center_vertical"
			android:lines="1"
			android:text="@string/choose_sync_materials_name"
			android:textSize="16sp"/>

		<TextView
			android:id="@+id/card_choose_sync_materials_quantities"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="10dp"
			android:gravity="center_vertical"
			android:text="@string/choose_sync_materials_quantities"
			android:textSize="20sp"/>
	</LinearLayout>

</LinearLayout>
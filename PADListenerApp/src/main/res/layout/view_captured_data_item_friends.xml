<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

	<TextView
		android:id="@+id/view_captured_data_friend_name"
		android:layout_width="fill_parent"
		android:layout_height="20dp"
		android:layout_marginBottom="5dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="5dp"
		android:gravity="center_vertical"
		android:text="@string/view_captured_data_friend_name"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="5dp"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/view_captured_data_friend_item_leader1_image"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:src="@drawable/no_monster_image"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextView
				android:id="@+id/view_captured_data_friend_item_leader1_name"
				android:layout_width="fill_parent"
				android:layout_height="20dp"
				android:layout_marginBottom="5dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_marginTop="5dp"
				android:gravity="center_vertical"
				android:text="@string/view_captured_friend_item_leader_name"/>

			<TextView
				android:id="@+id/view_captured_data_friend_item_leader1_stats"
				android:layout_width="fill_parent"
				android:layout_height="20dp"
				android:layout_marginBottom="5dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:gravity="center_vertical"
				android:text="@string/view_captured_friend_item_leader_stats"/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="5dp"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/view_captured_data_friend_item_leader2_image"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:src="@drawable/no_monster_image"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextView
				android:id="@+id/view_captured_data_friend_item_leader2_name"
				android:layout_width="fill_parent"
				android:layout_height="20dp"
				android:layout_marginBottom="5dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_marginTop="5dp"
				android:gravity="center_vertical"
				android:text="@string/view_captured_friend_item_leader_name"/>

			<TextView
				android:id="@+id/view_captured_data_friend_item_leader2_stats"
				android:layout_width="fill_parent"
				android:layout_height="20dp"
				android:layout_marginBottom="5dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:gravity="center_vertical"
				android:text="@string/view_captured_friend_item_leader_stats"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
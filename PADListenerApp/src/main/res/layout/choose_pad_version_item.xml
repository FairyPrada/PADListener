<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_margin="12dp"
	android:orientation="horizontal"
	tools:context=".ui.activity.HomeActivity">

	<ImageView
		android:id="@+id/home_fragment_launch_item_icon"
		android:layout_width="64dp"
		android:layout_height="64dp"
		android:layout_gravity="center"
		android:layout_margin="6dp"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center_vertical"
		android:layout_marginBottom="6dp"
		android:layout_marginTop="6dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/home_fragment_launch_item_name_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:text="PAD version"
			android:textSize="@dimen/text_size_xlarge"/>


		<TextView
			android:id="@+id/home_fragment_launch_item_running_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:text="@string/choose_pad_version_running"
			android:textColor="@color/text_warning"
			android:textSize="@dimen/text_size_large"/>
	</LinearLayout>

</LinearLayout>
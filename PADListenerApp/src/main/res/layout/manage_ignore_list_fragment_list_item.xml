<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	android:id="@+id/card_monster_info_monster_container"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="112dp"
	android:layout_height="112dp"
	tools:context=".ui.activity.ManageIgnoreListActivity">

	<ImageView
		android:id="@+id/manage_ignore_list_item_image_monster_image"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="8dp"
		android:src="@drawable/no_monster_image"/>

	<ImageView
		android:id="@+id/manage_ignore_list_item_image_remove_image"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_alignRight="@+id/manage_ignore_list_item_image_monster_image"
		android:layout_alignTop="@+id/manage_ignore_list_item_image_monster_image"
		android:layout_margin="1dp" android:src="@drawable/ic_action_remove"/>

</RelativeLayout>